<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/backz"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_arrow"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="Account Settings"
        android:textColor="@color/app_theme"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/edt_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/privacy_settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_prof"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Privacy Settings"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/connected_accounts"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacy_settings"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Connected Accounts"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/subscription_management"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/connected_accounts"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Subscriptions"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subscription_management"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Logout"
        android:textColor="#FF0000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/delete_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:backgroundTint="#F30606"
        android:textSize="18sp"
        android:layout_below="@id/logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
