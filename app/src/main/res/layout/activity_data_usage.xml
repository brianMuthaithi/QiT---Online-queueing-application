<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataUsage">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/backz"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/total_data_usage"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/back_arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="60dp"
        android:text="Total Data Usage: 500 MB"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/background_data_usage"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/total_data_usage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:text="Background Data Usage: 100 MB"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cellular_data_usage"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/background_data_usage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:text="Cellular Data Usage: 300 MB"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wifi_data_usage"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/cellular_data_usage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:text="Wi-Fi Data Usage: 100 MB"
        android:textColor="@color/black"
        android:textSize="20sp" />


</RelativeLayout>
